
<main>
    <label>Name:</label>
    <input type="text" id="name-input">
    <button>Add Name</button>

    <br><br>
    <div>
        <form id="searchForm" action="/search" method="get">
             <label for="database">Choose a car:</label>
                <select name="database" id="option">
                <option value="Central">Central</option>
                <option value="Luzon">Luzon</option>
                <option value="VisMin">Visayas and Midanao</option>
                </select> 
            <input placeholder="search by id" type="text" name="search" id="search_by_id">
            <button type="submit" id="search-btn">Search</button>
        </form>
    </div>

    <table id="table">
        <thead>
            <th>Appointment ID</th>
            <th>Hospital Name</th>
            <th>City</th>
            <th>Province</th>
            <th>Status</th>
            <th>Time queue</th>
            <th>Type</th>
            <th>Virtual</th>
        </thead>
        {{#each rows}}
            <tbody>
                <tr>
                    <td>{{apptid}}</td>
                    {{#if hospitalname}}
                    <td>{{hospitalname}}</td>
                    {{else}}
                    <td>Null</td>
                    {{/if}}
                    <td>{{City}}</td>
                    <td>{{Province}}</td>
                    <td>{{status}}</td>
                    <td>{{TimeQueued}}</td>
                    <td>{{type}}</td>
                    {{#if Virtual}}
                    <td>{{Virtual}}</td>
                    {{else}}
                    <td>Null</td>
                    {{/if}}
                </tr>
            </tbody>
        {{else}}
            <tbody><tr><td class='no-data' colspan=5> No data</td></tr> </tbody>
        {{/each}}
    </table>
</main>


<script src="scripts/intro.js"></script>